{
  "name": "settings-api-typescript",
  "version": "1.0.0",
  "description": "RESTful API for schemaless Settings objects using TypeScript and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "init-db": "ts-node src/init-db.ts",
    "test": "jest --coverage",
    "test:ui": "playwright test"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
